[Unit]
Description=Trading Gateway (Rust Axum)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=tradingbot
Group=tradingbot
WorkingDirectory=/opt/trading-bot/gateway
Environment=BACKEND_BASE=http://127.0.0.1:8009
Environment=GATEWAY_ADDR=0.0.0.0:8080
ExecStart=/opt/trading-bot/gateway/gateway
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target


