# Production Environment Configuration
# Copy this to .env and update with real values

# Database
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_ME@postgres:5432/trading_bot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://:CHANGE_ME@redis:6379/0
REDIS_MAX_CONNECTIONS=100

# Security
SECRET_KEY=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# VAPID Keys for Push Notifications
VAPID_PUBLIC_KEY=CHANGE_ME
VAPID_PRIVATE_KEY=CHANGE_ME

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM_EMAIL=notifications@example.com
SMTP_FROM_NAME=ASE Trading Bot
SMTP_USE_TLS=true

# OpenTelemetry (Optional)
OTEL_EXPORTER_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=ase-trading-bot
OTEL_ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# AI Configuration (Optional)
OPENAI_API_KEY=sk-CHANGE_ME
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_DAILY_BUDGET_USD=100.0

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
CORS_ORIGINS=["https://ase-bot.live"]
TRUSTED_HOSTS=["ase-bot.live", "www.ase-bot.live"]
